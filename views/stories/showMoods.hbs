<h6>View Your Moods</h6>
<h3>Welcome {{name}}</h3>
<p>A look back on how you felt: </p>
{{#if moods}}
  <table class="striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Status</th>
        {{! <th>Body</th> }}
        <th></th>

      </tr>
    </thead>
    <tbody>
      {{#each moods}}
        <tr>

          <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          {{!-- <td>{{body}}</td> --}}
          <td>
            <a href="/moods/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
            </a>

            <form
              action="/moods/showMoods{{_id}}"
              method="POST"
              id="delete-form"
            >
              <input type="hidden" name="_method" value="DELETE" />
              <button type="submit" class="btn red">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any entries. Add one now!</p>
{{/if}}

